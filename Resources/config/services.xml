<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nekland_feed.factory.class">Nekland\FeedBundle\Factory\FeedFactory</parameter>
        <parameter key="nekland_feed.renderer.rss.class">Nekland\FeedBundle\Renderer\RssRenderer</parameter>
        <parameter key="nekland_feed.loader.rss_file.class">Nekland\FeedBundle\Loader\RssFileLoader</parameter>
        <parameter key="nekland_feed.rss.base_path">%kernel.root_dir%/../web/feeds/</parameter>
    </parameters>

    <services>
        <service id="nekland_feed.factory" class="%nekland_feed.factory.class%">
            <argument>%nekland_feed.factory.config%</argument>
            <call method="setContainer">
              <argument type="service" id="service_container" />
          </call>
        </service>
        <service id="nekland_feed.renderer.rss" class="%nekland_feed.renderer.rss.class%">
            <argument type="service" id="router" />
            <argument>%nekland_feed.rss.base_path%</argument>
        </service>
        <service id="nekland_feed.loader.rss_file" class="%nekland_feed.loader.rss_file.class%">
            <argument>%nekland_feed.rss.base_path%</argument>
        </service>
    </services>

</container>
